.game-champions span {
    display: block;
    float: left;
    height: 40px;
    padding: 5px;
    line-height: 40px;
}

span.vs {
    font-size: 200%;
    font-weight: bold;
}

span.blue-team, span.purple-team {
    background-color: #edd;
}
span.blue-team.winner, span.purple-team.winner {
    background-color: #ded;
}
